<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="addData">
                <argument name="data" xsi:type="array">
                    <item name="css_class" xsi:type="string">contestio-hidden-title</item>
                </argument>
            </action>
        </referenceBlock>
        
        <referenceContainer name="head.additional">
            <block class="Contestio\Connect\Block\React" name="contestio_meta_tags" template="Contestio_Connect::meta_tags.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Contestio\Connect\ViewModel\RouteChecker</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Contestio\Connect\Block\React" name="contestio_react" template="Contestio_Connect::react.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Contestio\Connect\ViewModel\RouteChecker</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
